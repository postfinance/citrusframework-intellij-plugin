<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <id>ch.postfinance.citrusframework.xml.test.runner</id>
  <name>PF Citrus XML Plugin</name>
  <vendor>Postfinance AG</vendor>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>

  <extensions defaultExtensionNs="com.intellij" />

  <actions>
    <group
      id="ch.postfinance.citrusframework.plugin.runner"
      text="Run XML Citrus Test"
      popup="true"
      icon="/zitrone.png"
    >
      <action
        id="ch.postfinance.citrusframework.plugin.action.XmlTestRunnerAction"
        class="ch.postfinance.citrusframework.plugin.action.XmlTestRunnerAction"
        text="Run XML Test"
        description="Run a Citrus XML test"
        icon="AllIcons.Actions.Execute"
      >
        <keyboard-shortcut first-keystroke="control alt R" keymap="$default" />
      </action>
      <action
        id="ch.postfinance.citrusframework.plugin.action.XmlTestRunnerSelectConfigurationAction"
        class="ch.postfinance.citrusframework.plugin.action.XmlTestRunnerSelectConfigurationAction"
        text="Select Run Configuration"
        description="The Run Configuration to execute the test"
        icon="AllIcons.Actions.Execute"
      >
        <keyboard-shortcut first-keystroke="control alt C" keymap="$default" />
      </action>
    </group>

    <group
      id="ch.postfinance.citrusframework.plugin.debugger"
      text="Debug XML Citrus Test"
      popup="true"
      icon="/zitrone.png"
    >
      <action
        id="ch.postfinance.citrusframework.plugin.action.XmlTestDebuggerAction"
        class="ch.postfinance.citrusframework.plugin.action.XmlTestDebuggerAction"
        text="Debug XML Test"
        description="Debug a Citrus XML Test"
        icon="AllIcons.Actions.StartDebugger"
      >
        <keyboard-shortcut first-keystroke="control alt D" keymap="$default" />
      </action>
      <action
        id="ch.postfinance.citrusframework.plugin.action.XmlTestDebuggerSelectConfigurationAction"
        class="ch.postfinance.citrusframework.plugin.action.XmlTestDebuggerSelectConfigurationAction"
        text="Select a Run Configuration"
        description="The Run Configuration to debug the test"
        icon="AllIcons.Actions.StartDebugger"
      >
        <keyboard-shortcut first-keystroke="control alt V" keymap="$default" />
      </action>
      <separator />
    </group>

    <group
      id="ch.postfinance.citrusframework.plugin.wrapper"
      text="Citrus Plugin Group"
    >
      <separator />
      <reference ref="ch.postfinance.citrusframework.plugin.runner" />
      <reference ref="ch.postfinance.citrusframework.plugin.debugger" />
      <separator />
      <add-to-group group-id="ProjectViewPopupMenu" anchor="last" />
      <add-to-group group-id="EditorPopupMenu" anchor="last" />
    </group>
  </actions>
</idea-plugin>
